    "globals": "^16.0.0",
    "prebuild": "^13.0.1",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.26.1",
    "vitest": "^3.0.8"
  },
  "files": [
    "CMakeLists.txt",
    "src",
    "lib",
    "dist",
    "pcre2"
  ],
  "pnpm": {
    "onlyBuiltDependencies": [
      "es5-ext",
      "esbuild"
    ]
  }
